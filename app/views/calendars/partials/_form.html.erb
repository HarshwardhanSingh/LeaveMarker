<%= simple_form_for(@calendar) do |f| %>
  <div class="form-group">
    <%= f.input :name, label: false, input_html: { placeholder: "Calendar Name" } %>
  </div>
  <div class="form-group">
    <%= f.input :description, label: false, input_html: { placeholder: "Description (Optional)" } %>
  </div>
  <div class="form-actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
